<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="movieDetails"
            type="com.example.tmdb.ui.details.MovieDetailsActivity" />


        <variable
            name="detailViewModel"
            type="com.example.tmdb.ui.details.DetailsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="#F8F8FB"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:id="@+id/movieImage"
                    android:scaleType="fitCenter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/backButton"
                    android:src="@drawable/ic_backl_white"
                    android:onClick="@{() -> movieDetails.back()}"
                    android:padding="8dp"
                    android:layout_margin="30dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>



            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/divider"
            android:background="#00000000"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/divider"
            android:background="@drawable/drawable_white_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/movie_title"
                    tools:text="Wonder Woman"
                    android:textColor="#000000"
                    android:layout_marginTop="35dp"
                    android:textSize="21sp"
                    android:fontFamily="@font/montserrat_bold"/>
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/movie_rating"
                    android:numStars="10"
                    style="?android:attr/ratingBarStyleSmall"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/movie_lang"
                    tools:text="Wonder Woman"
                    android:textColor="#9E9CB1"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat_medium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/release_date"
                    tools:text="Wonder Woman"
                    android:textColor="#9E9CB1"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat_medium"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/release_status"
                    tools:text="Wonder Woman"
                    android:textColor="#9E9CB1"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat_medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Synopsis"
                    android:textColor="#000000"
                    android:layout_marginTop="20dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat_semibold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/synopsos_desc"
                    tools:text="Wonder Woman"
                    android:textColor="#9E9CB1"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat_medium"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Production House"
                    android:textColor="#000000"
                    android:layout_marginTop="22dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat_semibold"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    android:id="@+id/prod_house_recycler"/>
            </LinearLayout>
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
